# Apps and scripts
super + t
    kitty

super + b
    firefox

super + m
    rofi -show drun

super + v
    vscodium

super + s
    prtsc.sh

super + l
    lock.sh

# Close window
super + shift + q
    bspc node -c

# Move window
super + { Left, Right, Up, Down }
    bspc node -s { west, east, north, south } --follow

# Switch / send to workspace
super + {0-9}
    bspc desktop -f {X.local,I.local,II.local,III.local,IV.local,V.local,VI.local,VII.local,VIII.local,IX.local}
super + shift + {0-9}
    bspc node -d {X.local,I.local,II.local,III.local,IV.local,V.local,VI.local,VII.local,VIII.local,IX.local}

# Monitor
super + shift + m
    switch-to-monitor.sh; bspc monitor HDMI1 -d I II III IV V VI VII VIII IX X; bspc monitor HDMI1 -g 1920x1080+0+0; bspc config bottom_padding 32; killall polybar; polybar main

super + shift + l
    switch-to-laptop.sh; bspc monitor eDP1 -d I II III IV V VI VII VIII IX X; bspc monitor eDP1 -g 1920x1080+0+0; bspc config bottom_padding 32; killall polybar; polybar main

# Window state
super + shift + space
    bspc node -t floating

super + space
    bspc node -t tiled

super + f
    bspc node -t fullscreen

# Volume
# Decrease
super + comma
    volume-control.lua 2

# Increase
super + period
    volume-control.lua 1

# Toggle mute
super + slash
    volume-control.lua 3

