[colors]
background = ${xrdb:color0:#222}
foreground = ${xrdb:color7:#222}
color1 = ${xrdb:color1:#222}
color2 = ${xrdb:color2:#222}
color3 = ${xrdb:color3:#222}
color4 = ${xrdb:color4:#222}
color5 = ${xrdb:color5:#222}
color6 = ${xrdb:color6:#222}
color8 = ${xrdb:color8:#222}
color9 = #5b5248

[bar/main]
height = 24
width = 100%
;padding-left = 5
;padding-right = 5
border-bottom-size = 4
border-top-size = 4
border-top-color = ${colors.background}
border-bottom-color = ${colors.background}
;offset-x = 8
;offset-y = 8
fixed-center = true
bottom = true
background = ${colors.background}
line-size = 3
font-0 = Comfortaa:style=Bold:size=10;3
font-1 = JetBrainsMono Nerd Font Mono:style=Regular:size=14;3
font-2 = JetBrainsMono Nerd Font Mono:style=Regular:pixelsize=17;4
font-3 = JetBrainsMono Nerd Font Mono:style=Regular:size=16;3
font-4 = JetBrainsMono Nerd Font Mono:style=Regular:size=24;5
modules-left = spacer power spacer i3 spacer
modules-right = memory spacer cpu spacer battery spacer pulseaudio spacer wlan spacer date spacer
;override-redirect = true
cursor-click = pointer
;wm-restack = i3

[module/spacer]
type = custom/text
content = " "

[module/power]
type = custom/text
content = "%{T5}%{T-}"
content-padding = 1
content-foreground = ${colors.color1}
click-left = power-menu

[module/i3]
type = internal/i3
format = <label-state><label-mode>
index-sort = true
wrapping-scroll = false
; Only show workspaces on the same output as the bar
;pin-workspaces = true
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 10;
ws-icon-default = 
label-mode-padding = 1
label-mode-foreground = #000
; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-padding = 2
label-focused-foreground = ${colors.foreground}
; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-padding = 2
label-unfocused-foreground = ${colors.color9}
; visible = Active workspace on unfocused monitor
label-visible = %icon%
label-visible-padding = 2
label-visible-foreground = ${colors.foreground}
; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-padding = 2
label-urgent-foreground = ${colors.color1}

[module/cpu]
type = internal/cpu
interval = 2
label = "%{T3}%{T-} %percentage%"
format-foreground = ${colors.color3}
format-padding = 2

[module/memory]
type = internal/memory
interval = 2
label = "%{T3}%{T-} %percentage_used%"
format-foreground = ${colors.color3}
format-padding = 2

[module/date]
type = internal/date
interval = 5
date = "%d/%m/%Y"
date-alt = "%d/%m/%Y"
time = "%H:%M"
time-alt = "%H:%M:%S"
label = "%{T3}%{T-} %time%  %date%"
format-foreground = ${colors.color4}
format-padding = 2

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <label-volume>
label-volume = "%{T3}%{T-} %percentage%"
label-muted = "%{T3}%{T-} MUTED"
format-volume-foreground = ${colors.color6}
format-volume-padding = 2
format-muted-foreground = ${colors.color6}
format-muted-padding = 2

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98
format-charging = <label-charging>
label-charging = "%{T3}%{T-} %percentage%"
format-discharging = <label-discharging>
label-discharging = "%{T3}%{T-} %percentage%"
format-full = <label-full>
label-full = "%{T3}%{T-} %percentage%"
format-charging-foreground = ${colors.color2}
format-charging-padding = 2
format-discharging-foreground = ${colors.color2}
format-discharging-padding = 2
format-full-foreground = ${colors.color2}
format-full-padding = 2

[module/wlan]
type = internal/network
interface = wlan0
interval = 3.0
format-connected = <label-connected>
format-disconnected = <label-disconnected>
format-disconnected-foreground = ${colors.color5}
format-connected-foreground = ${colors.color5}
format-connected-padding = 2
format-disconnected-padding = 2
tail = true

label-connected = "%{T3}%{T-} %essid%"
label-disconnected = "%{T3}%{T-} No connection"

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0
content-margin = 0
