# Sreen brightness controls
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 10 # increase screen brightness
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 10 # decrease screen brightnes
bindcode 69 exec --no-startup-id xbacklight -inc 10 # increase screen brightness
bindcode 68 exec --no-startup-id xbacklight -dec 10 # decrease screen brightnesss

mode "DISPLAY" {
    bindsym $mod+m exec --no-startup-id switch-to-monitor.sh
    bindsym $mod+l exec --no-startup-id switch-to-laptop.sh
    bindsym $mod+Shift+m exec --no-startup-id extend-to-monitor.sh
    bindsym $mod+Shift+l exec --no-startup-id extend-to-laptop.sh

    bindsym Escape mode "default"
}

bindsym $mod+Shift+d mode "DISPLAY"

